<UserControl
  x:Class="Arabiyya.Theme.DemoApp.Views.ColorPaletteView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:Arabiyya.Theme.Demo.ViewModels"
  d:DesignHeight="600"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <Design.DataContext>
    <vm:ColorPaletteViewModel />
  </Design.DataContext>

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="30">
      <TextBlock Classes="h2" Text="Color Palette" />

      <!--  Description  -->
      <Border
        Padding="15"
        Background="{DynamicResource Brush.Surface}"
        BorderBrush="{DynamicResource Brush.Divider}"
        BorderThickness="1"
        CornerRadius="8">
        <TextBlock TextWrapping="Wrap">
          This theme uses a carefully selected color system with primary, secondary, and accent colors,
          complemented by status indicators and neutral surfaces. Each color has light and dark variants
          for different emphasis levels and interactions. The palette automatically adjusts between light
          and dark themes for optimal readability and aesthetics.
        </TextBlock>
      </Border>

      <!--  Primary Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Primary Colors" />

        <Grid ColumnDefinitions="*,*,*">
          <!--  Primary colors row  -->
          <Border
            Height="80"
            Background="{DynamicResource Brush.Primary}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="Primary"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="#0072B5"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Primary Light  -->
          <Border
            Grid.Column="1"
            Height="80"
            Margin="10,0"
            Background="{DynamicResource Brush.Primary.Light}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="Primary Light"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="#3A95D0"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Primary Dark  -->
          <Border
            Grid.Column="2"
            Height="80"
            Background="{DynamicResource Brush.Primary.Dark}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="Primary Dark"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnPrimary}"
                Text="#005A91"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <!--  Usage description  -->
        <TextBlock
          Margin="0,10,0,0"
          Text="Primary colors are used for main actions, key UI elements, and to establish the brand identity across the interface."
          TextWrapping="Wrap" />
      </StackPanel>

      <!--  Secondary Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Secondary Colors" />

        <Grid ColumnDefinitions="*,*,*">
          <!--  Secondary  -->
          <Border
            Height="80"
            Background="{DynamicResource Brush.Secondary}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="Secondary"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="#7D3C98"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Secondary Light  -->
          <Border
            Grid.Column="1"
            Height="80"
            Margin="10,0"
            Background="{DynamicResource Brush.Secondary.Light}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="Secondary Light"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="#9B59B6"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Secondary Dark  -->
          <Border
            Grid.Column="2"
            Height="80"
            Background="{DynamicResource Brush.Secondary.Dark}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="Secondary Dark"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnSecondary}"
                Text="#5B2C6F"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <!--  Usage description  -->
        <TextBlock
          Margin="0,10,0,0"
          Text="Secondary colors provide contrast with the primary palette and are used for less prominent UI elements, supporting actions, and visual balance."
          TextWrapping="Wrap" />
      </StackPanel>

      <!--  Accent Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Accent Colors" />

        <Grid ColumnDefinitions="*,*,*">
          <!--  Accent  -->
          <Border
            Height="80"
            Background="{DynamicResource Brush.Accent}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="Accent"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="#FF9800"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Accent Light  -->
          <Border
            Grid.Column="1"
            Height="80"
            Margin="10,0"
            Background="{DynamicResource Brush.Accent.Light}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="Accent Light"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="#FFB74D"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Accent Dark  -->
          <Border
            Grid.Column="2"
            Height="80"
            Background="{DynamicResource Brush.Accent.Dark}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="Accent Dark"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="{DynamicResource Brush.Text.OnAccent}"
                Text="#F57C00"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <!--  Usage description  -->
        <TextBlock
          Margin="0,10,0,0"
          Text="Accent colors draw attention to specific elements, highlight important information, and can be used sparingly to create focal points in the UI."
          TextWrapping="Wrap" />
      </StackPanel>

      <!--  Status Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Status Colors" />

        <Grid ColumnDefinitions="*,*,*,*">
          <Border
            Height="80"
            Background="{DynamicResource Brush.Success}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="White"
                Text="Success"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="White"
                Text="Success"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Column="1"
            Height="80"
            Margin="8,0"
            Background="{DynamicResource Brush.Error}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="White"
                Text="Error"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="White"
                Text="Error"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Column="2"
            Height="80"
            Margin="0,0,8,0"
            Background="{DynamicResource Brush.Warning}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="Black"
                Text="Warning"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="Black"
                Text="Warning"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Column="3"
            Height="80"
            Background="{DynamicResource Brush.Info}"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Foreground="White"
                Text="Info"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Foreground="White"
                Text="Info"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <!--  Status colors usage  -->
        <Border
          Margin="0,15,0,0"
          Padding="15"
          Background="{DynamicResource Brush.Surface.Elevated1}"
          BorderBrush="{DynamicResource Brush.Divider}"
          BorderThickness="1"
          CornerRadius="8">
          <StackPanel Spacing="8">
            <TextBlock FontWeight="SemiBold" Text="Status Color Usage:" />
            <TextBlock Text="• Success: Confirmations, completed actions, positive states" />
            <TextBlock Text="• Error: Critical issues, failures, destructive actions" />
            <TextBlock Text="• Warning: Alerts, cautions, pending actions" />
            <TextBlock Text="• Info: Neutral notifications, informational messages" />
          </StackPanel>
        </Border>
      </StackPanel>

      <!--  Background & Surface  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Background &amp; Surface Colors" />

        <Grid ColumnDefinitions="*,*" RowDefinitions="80,Auto,80,Auto">
          <Border
            Height="80"
            Background="{DynamicResource Brush.Background}"
            BorderBrush="{DynamicResource Brush.Divider}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Background"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Background"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Column="1"
            Height="80"
            Margin="10,0"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Divider}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Surface"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Surface"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <!--  Elevated Surfaces  -->
          <Border
            Grid.Row="2"
            Grid.Column="0"
            Height="80"
            Margin="0,15,0,0"
            Background="{DynamicResource Brush.Surface.Elevated1}"
            BorderBrush="{DynamicResource Brush.Divider}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Surface Elevated 1"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Surface Elevated 1"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Row="2"
            Grid.Column="1"
            Height="80"
            Margin="10,15,0,0"
            Background="{DynamicResource Brush.Surface.Elevated2}"
            BorderBrush="{DynamicResource Brush.Divider}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Surface Elevated 2"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Surface Elevated 2"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <!--  Usage description  -->
        <TextBlock
          Margin="0,15,0,0"
          Text="Background colors are used for the app backdrop, while Surface colors define content containers, cards, and other UI elements that sit on top of the background. Elevated surfaces create visual hierarchy through subtle differences."
          TextWrapping="Wrap" />
      </StackPanel>

      <!--  Text Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Text Colors" />

        <Border
          Padding="20"
          Background="{DynamicResource Brush.Surface}"
          BorderBrush="{DynamicResource Brush.Divider}"
          BorderThickness="1"
          CornerRadius="8">
          <StackPanel Spacing="15">
            <Grid ColumnDefinitions="200,*">
              <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                Foreground="{DynamicResource Brush.Text.Primary}"
                Text="Primary Text" />
              <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Main content text for high emphasis" />
            </Grid>

            <Grid ColumnDefinitions="200,*">
              <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                Foreground="{DynamicResource Brush.Text.Secondary}"
                Text="Secondary Text" />
              <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Less important or supporting text" />
            </Grid>

            <Grid ColumnDefinitions="200,*">
              <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                Foreground="{DynamicResource Brush.Text.Disabled}"
                Text="Disabled Text" />
              <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Text for disabled UI elements" />
            </Grid>

            <Grid ColumnDefinitions="200,*">
              <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontSize="16"
                Foreground="{DynamicResource Brush.Text.Muted}"
                Text="Muted Text" />
              <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Hints, captions, and complementary information" />
            </Grid>

            <Border
              Margin="0,10,0,0"
              Padding="15"
              Background="{DynamicResource Brush.Primary}"
              CornerRadius="4">
              <Grid ColumnDefinitions="200,*">
                <TextBlock
                  FontSize="16"
                  Foreground="{DynamicResource Brush.Text.OnPrimary}"
                  Text="Text on Primary" />
                <TextBlock
                  Grid.Column="1"
                  Foreground="{DynamicResource Brush.Text.OnPrimary}"
                  Text="Used for text on primary-colored backgrounds" />
              </Grid>
            </Border>

            <Border
              Padding="15"
              Background="{DynamicResource Brush.Secondary}"
              CornerRadius="4">
              <Grid ColumnDefinitions="200,*">
                <TextBlock
                  FontSize="16"
                  Foreground="{DynamicResource Brush.Text.OnSecondary}"
                  Text="Text on Secondary" />
                <TextBlock
                  Grid.Column="1"
                  Foreground="{DynamicResource Brush.Text.OnSecondary}"
                  Text="Used for text on secondary-colored backgrounds" />
              </Grid>
            </Border>

            <Border
              Padding="15"
              Background="{DynamicResource Brush.Accent}"
              CornerRadius="4">
              <Grid ColumnDefinitions="200,*">
                <TextBlock
                  FontSize="16"
                  Foreground="{DynamicResource Brush.Text.OnAccent}"
                  Text="Text on Accent" />
                <TextBlock
                  Grid.Column="1"
                  Foreground="{DynamicResource Brush.Text.OnAccent}"
                  Text="Used for text on accent-colored backgrounds" />
              </Grid>
            </Border>
          </StackPanel>
        </Border>
      </StackPanel>

      <!--  Border & Outline Colors  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Border &amp; Outline Colors" />

        <Grid ColumnDefinitions="*,*">
          <Border
            Height="80"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Outline}"
            BorderThickness="4"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Outline"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Outline"
                TextAlignment="Center" />
            </StackPanel>
          </Border>

          <Border
            Grid.Column="1"
            Height="80"
            Margin="10,0"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Divider}"
            BorderThickness="4"
            CornerRadius="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
              <TextBlock
                FontWeight="SemiBold"
                Text="Divider"
                TextAlignment="Center" />
              <TextBlock
                FontSize="12"
                Text="Divider"
                TextAlignment="Center" />
            </StackPanel>
          </Border>
        </Grid>

        <TextBlock
          Margin="0,10,0,0"
          Text="Dividers are used to separate content sections, while outlines define boundaries around components and interactive elements."
          TextWrapping="Wrap" />
      </StackPanel>

      <!--  Color System Guidelines  -->
      <StackPanel>
        <TextBlock
          Margin="0,0,0,10"
          Classes="h3"
          Text="Color System Guidelines" />

        <Border
          Padding="20"
          Background="{DynamicResource Brush.Surface.Elevated1}"
          BorderBrush="{DynamicResource Brush.Divider}"
          BorderThickness="1"
          CornerRadius="8">
          <StackPanel Spacing="15">
            <TextBlock Classes="h5" Text="Accessibility Considerations" />
            <TextBlock TextWrapping="Wrap">
              All color combinations maintain appropriate contrast ratios (4.5:1 for normal text, 3:1 for large text) to ensure readability for all users.
              The theme automatically adapts between light and dark modes to optimize contrast in different lighting conditions.
            </TextBlock>

            <TextBlock
              Margin="0,10,0,0"
              Classes="h5"
              Text="Color Usage" />
            <StackPanel Margin="10,0,0,0" Spacing="8">
              <TextBlock Text="• Use primary colors for main actions and primary navigation" />
              <TextBlock Text="• Use secondary colors for supporting elements and secondary actions" />
              <TextBlock Text="• Use accent colors sparingly for emphasis and focus" />
              <TextBlock Text="• Status colors should be used consistently for their semantic meaning" />
              <TextBlock Text="• Maintain consistent color application across the application" />
              <TextBlock Text="• Surfaces with elevation should have subtle color differences" />
            </StackPanel>

            <TextBlock
              Margin="0,10,0,0"
              Classes="h5"
              Text="Dark Mode Adaptation" />
            <TextBlock TextWrapping="Wrap">
              In dark mode, colors are optimized for reduced eye strain while maintaining brand identity. Brightness and saturation levels are adjusted for comfortable viewing in low-light environments. Surface colors become darker, and text colors become lighter to maintain readability.
            </TextBlock>
          </StackPanel>
        </Border>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>
